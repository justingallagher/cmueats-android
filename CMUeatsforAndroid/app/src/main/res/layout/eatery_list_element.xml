<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">

    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        android:id="@+id/openIndicator"
        android:layout_marginRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/openIndicator"
        android:layout_marginTop="12dp"
        android:text="Eatery name"
        android:textSize="16sp"
        android:id="@+id/tvEateryName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/openIndicator"
        android:layout_below="@id/tvEateryName"
        android:text="Eatery Status"
        android:textSize="12sp"
        android:id="@+id/tvEateryStatus" />

</RelativeLayout>